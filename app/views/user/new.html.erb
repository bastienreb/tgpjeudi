<form class="container">
  <br>
  <h1>Sign up</h1>
  <br>

  <%= form_tag url_for(action: 'create'), method: "post" do %>
    <div class='form-row'>
      <div class="col-md-4 mb-3">
        <%= label_tag 'First name' %>
        <%= text_field_tag 'first_name', "", class: 'form-control' %>
      </div>

      <div class="col-md-4 mb-3">
        <%= label_tag 'Last name' %>
        <%= text_field_tag 'last_name', "",  class: 'form-control' %>
      </div>
    
      <div class="col-md-4 mb-3">
        <%= label_tag 'Age' %>
        <%= number_field_tag 'age', "",  class: 'form-control' %>
      </div>

      <div class="col-md-4 mb-3">
        <%= label_tag 'City' %>
        <%= text_field_tag 'city', "",  class: 'form-control' %>
      </div>

      <div class="col-md-8 mb-3">
        <%= label_tag 'Description' %>
        <%= text_area_tag 'description', "",  class: 'form-control' %>
      </div>
    </div>
    
    <div class='form-row'>
      <div class="col-md-4 mb-3">
        <%= label_tag 'Email' %>
        <%= text_field_tag 'email', "",  class: 'form-control' %>
      </div>

      <div class="col-md-4 mb-3">
        <%= label_tag 'Password' %>
        <%= text_field_tag 'password', "",  class: 'form-control' %>
      </div>   
    </div>`
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% end %>
</form>