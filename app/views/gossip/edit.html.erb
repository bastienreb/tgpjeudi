<div class='container'>
  </br>
  <%= form_tag url_for(action: 'update'), method: "put" do %>
    <div class='form-group'>
      <%= label_tag 'Title' %>
      <%= text_field_tag 'title', "", class: 'form-control'%>
    </div>
    <div class='form-group'>
      <%= label_tag 'Your gossip' %>
      <%= text_area_tag 'content', "" , class: 'form-control'%>
    </div>
    <%= submit_tag "Edit", class: 'btn btn-secondary' %>
  <% end %>
</div>